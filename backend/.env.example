# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
DEBUG=false

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600  # Cache TTL in seconds

# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=olympian_ai
MONGODB_USERNAME=
MONGODB_PASSWORD=

# Security
JWT_SECRET=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Service Discovery
DISCOVERY_ENABLED=true
DISCOVERY_SCAN_INTERVAL=30

# External Service Configurations (Optional)
# These will be auto-discovered if running locally

# Ollama
OLLAMA_ENDPOINTS=http://localhost:11434,http://localhost:8080

# Supabase (for webhook integration)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key

# Mattermost (for webhook integration)
MATTERMOST_URL=https://your-mattermost.com
MATTERMOST_TOKEN=your-token

# Discord (for webhook notifications)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...